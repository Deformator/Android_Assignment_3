<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Background -->
    <style name="Background">
        <item name="android:background">@color/background</item>
    </style>

    <!-- Main screen label -->
    <style name="SegmentedControl">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <!-- Segmented control on the main screen. -->
    <style name="RadioButtonSC">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/radio_button_sc</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Main screen label -->
    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">@dimen/main_screen_title</item>
    </style>

    <!-- Registration form buttons -->
    <style name="ButtonReg">
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Registration row for registration form -->
    <style name="RegistrationRow">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <!-- Text view for registration form -->
    <style name="TextViewReg">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Edit text for registration form -->
    <style name="EditTextReg">
        <item name="android:ems">11</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- List View -->
    <style name="ListView">
        <item name="android:headerDividersEnabled">false</item>
    </style>

    <!-- Product name label -->
    <style name="ProductNameLabel">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">@dimen/product_name_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Category name label -->
    <style name="CategoryNameLabel">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">@dimen/category_name_label</item>
    </style>

    <!-- Product quantity label -->
    <style name="ProductQuantityLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/product_quantity_label</item>
    </style>

    <!-- Product price label -->
    <style name="ProductPriceLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/product_price_label</item>
    </style>

    <!-- Button Logout -->
    <style name="ButtonLogout">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

</resources>
