<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andriidamm.andriidamm_mapd711_onlinepurchase.PlaceAnOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewYourOrders"
            style="@style/Title"
            android:layout_marginLeft="90dp"
            android:text="@string/LabelPlaced_orders" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewOrdersClerk"
        style="@style/ListView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <Button
        android:id="@+id/buttonSubmitAnOrder"
        style="@style/ButtonReg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onSubmitPressed"
        android:text="Submit" />

    <Button
        android:id="@+id/buttonCancelAnOrder"
        style="@style/ButtonReg"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onSubmitPressed"
        android:text="Cancel" />

</LinearLayout>
